@model IEnumerable<FrontEnd.Models.ColaboradorViewModel>

@{
    ViewBag.Title = "Index";
}


@section seccion
{

    <h2>Colaboradores</h2>
    @Html.ActionLink("Agregar nuevo colaborador", "Create", new { }, new
                   { @class = "btn btn-success", title = "Agregar" })

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Correo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rol_ID)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellidos)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Correo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rol_ID)
                </td>
                <td>



                    @Html.ActionLink("Editar", "Edit", new { id = item.Colaborador_ID }, new
                    { @class = "btn btn-warning", title = "Editar" })

                    @Html.ActionLink("Detalles", "Details", new { id = item.Colaborador_ID }, new
                    { @class = "btn btn-info", title = "Detalles" })

                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Colaborador_ID }, new
                    { @class = "btn btn-danger", title = "Eliminar" })


                </td>
            </tr>
        }

    </table>

}