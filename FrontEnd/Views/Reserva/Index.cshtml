@model IEnumerable<FrontEnd.Models.ReservaViewModel>

@{
    ViewBag.Title = "Index";

}


@section seccion
{

    <h2>Reservas</h2>

    @Html.ActionLink("Agregar nueva reserva", "Create", new { }, new
                 { @class = "btn btn-success", title = "Agregar" })


    @Html.ActionLink("Reporte", "Report", new { }, new
                     { @class = "btn btn-info", title = "Reporte" })

    @*<p>
        @Html.ActionLink("Reporte", "Report")
    </p>*@

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Servicio_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Consentimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Horario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cantidad_Personas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo_Pago)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Observacion)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Usuario_ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Servicio_ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Consentimiento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Horario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cantidad_Personas)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tipo_Pago)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Observacion)
                </td>
                <td>


                    @Html.ActionLink("Editar", "Edit", new { id = item.Reserva_ID }, new
                       { @class = "btn btn-warning", title = "Editar" })

                    @Html.ActionLink("Detalles", "Details", new { id = item.Reserva_ID }, new
                    { @class = "btn btn-info", title = "Detalles" })

                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Reserva_ID }, new
                    { @class = "btn btn-danger", title = "Eliminar" })


                </td>
            </tr>
        }

    </table>
}